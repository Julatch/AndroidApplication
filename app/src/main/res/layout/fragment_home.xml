<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_current_status"
        android:layout_width="360dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="仕事頑張って!!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="205dp"
        android:layout_height="70dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_current_status"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/button_toggle_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkgreen"
        android:text="ステータス"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/rest_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="休憩リマインダー："
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_status" />

    <TextView
        android:id="@+id/work_totaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="今日の仕事総時間："
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/rest_reminder"
        app:layout_constraintTop_toBottomOf="@+id/rest_time" />

    <TextView
        android:id="@+id/water_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="水分補給リマインダー："
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/work_totaltime"
        app:layout_constraintTop_toBottomOf="@+id/work_totaltime" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="102dp"
        android:layout_height="27dp"
        android:text="休憩まで："
        app:layout_constraintBottom_toBottomOf="@+id/countdown"
        app:layout_constraintEnd_toStartOf="@+id/countdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/countdown" />

    <TextView
        android:id="@+id/work_totaltime_count"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/work_totaltime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toEndOf="@+id/work_totaltime"
        app:layout_constraintTop_toTopOf="@+id/work_totaltime"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/rest_reminder_spinner"
        android:layout_width="126dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/rest_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toEndOf="@+id/rest_reminder"
        app:layout_constraintTop_toTopOf="@+id/rest_reminder"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/rest_time_spinner"
        android:layout_width="126dp"
        android:layout_height="25dp"
        android:layout_marginStart="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/rest_time"
        app:layout_constraintEnd_toEndOf="@+id/rest_reminder_spinner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/rest_time"
        app:layout_constraintStart_toStartOf="@+id/rest_reminder_spinner"
        app:layout_constraintTop_toTopOf="@+id/rest_time"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/water_reminder_spinner"
        android:layout_width="126dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/water_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/water_reminder"
        app:layout_constraintTop_toTopOf="@+id/water_reminder" />

    <Switch
        android:id="@+id/work_status"
        android:layout_width="135dp"
        android:layout_height="26dp"
        android:textOff="勤務終了"
        android:textOn="勤務中"
        app:layout_constraintBottom_toBottomOf="@+id/work_totaltime_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toEndOf="@+id/work_totaltime_count"
        app:layout_constraintTop_toTopOf="@+id/work_totaltime_count"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/tips_view"
        android:layout_width="355dp"
        android:layout_height="242dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/rest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="休憩時間："
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/rest_reminder"
        app:layout_constraintTop_toBottomOf="@+id/rest_reminder" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="健康アドバイス："
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/water_reminder"
        app:layout_constraintTop_toBottomOf="@+id/water_reminder" />

    <Button
        android:id="@+id/button_generate_content"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:text="アドバイスを生成"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:rippleColor="@color/palegreen" />

</androidx.constraintlayout.widget.ConstraintLayout>