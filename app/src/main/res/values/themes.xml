<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarOilCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgreen</item>
        <item name="colorPrimaryVariant">@color/darkgreen</item>
        <item name="colorOnPrimary">@color/palegreen</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray2</item>
        <item name="colorSecondaryVariant">@color/gray1</item>
        <item name="colorOnSecondary">@color/black1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textColorPrimary">@color/black1</item>
        <item name="android:textColorSecondary">@color/black1</item>
        <item name="android:textColor">@color/black1</item>
        <item name="colorAccent">@color/lime</item>
    </style>

    <style name="Theme.CarOilCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CarOilCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CarOilCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>